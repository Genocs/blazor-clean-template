@page "/home"
@page "/"
@inject Microsoft.Extensions.Localization.IStringLocalizer<Home> _localizer

<MudContainer>
    <MudGrid>
        <MudItem xs="12" sm="12" md="12">
            <div class="d-flex justify-center mt-4">
                <MudIcon Icon="@CustomIcons.BlazorPortal" Color="Color.Primary" Size="Size.Large" ViewBox="0 0 500 500" Style="width: 250px; height: 250px;" />
            </div>
        </MudItem>
        <MudItem xs="12" sm="12" md="12">
            <MudText Align="Align.Center" Typo="Typo.h2">@_localizer["Title"] v3.0</MudText>
            <MudText Align="Align.Center" Typo="Typo.h5" Class="smaller">@_localizer["Description"]</MudText>
        </MudItem>
        <MudItem xs="12" sm="12" md="12">
            <MudText Align="Align.Center">
                @_localizer["Blazor Portal Description"] <MudLink Href="https://www.mudblazor.com" Target="_blank">MudBlazor</MudLink> @_localizer["Component Library"].
            </MudText>
        </MudItem>
        <MudItem  xs="12" sm="12" md="12">
            <MudAlert Style="margin-top:10px;justify-content:center" Severity="Severity.Info">@_localizer["Celebrating 1 Star on Github!"] <MudLink Href="https://github.com/Genocs/blazor-clean-template">@_localizer["Liked BlazorPortal? Star us on Github!"]</MudLink></MudAlert>
        </MudItem>
        <MudItem xs="12" sm="12" md="12">
            <div class="pa-4 justify-center my-4 mud-text-align-center">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Link="https://github.com/Genocs/blazor-clean-template" Target="_blank">@_localizer["Project Page"]</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Secondary" Link="https://www.buymeacoffee.com/genocs" Target="_blank">@_localizer["Support Me"]</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Surface" Link="https://genocs-blog.netlify.app/blazor-template/" Target="_blank">@_localizer["Documentation - Coming Soon"]</MudButton>
            </div>
        </MudItem>

        <MudItem xs="12" sm="12" md="12">
            <MudExpansionPanels>
                <MudExpansionPanel Text="@_localizer["Getting Started"]" MaxHeight="150">
                    @_localizer["Increase you are stuck anywhere or have any queries regarding this implementation, I have compiled a Quick Start Guide for you reference."]
                    <MudButton Variant="Variant.Text" DisableElevation="true" Color="Color.Secondary" Link="https://genocs-blog.netlify.app" Target="_blank">@_localizer["Read The Guide"]</MudButton>
                </MudExpansionPanel>
                <MudExpansionPanel Text="@_localizer["Important Links"]" MaxHeight="500">
                    <MudList Clickable="true">
                        <MudListItem Text="@_localizer["Github Repository : Do Not Forget to Leave a Star ;)"]" Href="https://github.com/Genocs/blazor-clean-template" />
                        <MudListItem Text="@_localizer["Quick Start Guide"]" Href="https://genocs-blog.netlify.app/blazor-template/" />
                    </MudList>
                </MudExpansionPanel>
                <MudExpansionPanel Text="@_localizer["Learning Resources"]" MaxHeight="1000">
                    @_localizer["Here are few articles that should help you get started with Blazor."]
                    <MudList Clickable="true">
                        <MudListItem Text="@_localizer["Blazor For Beginners – Getting Started With Blazor"]" Href="https://genocs-blog.netlify.app/blog/getting-started-with-blazor/" />
                        <MudListItem Text="@_localizer["Exploring Blazor Project Structure"]" Href="https://genocs-blog.netlify.app/blog/exploring-blazor-project-structure/" />
                        <MudListItem Text="@_localizer["Onion Architecture In ASP.NET Core With CQRS – Detailed"]" Href="https://genocs-blog.netlify.app/blog/onion-architecture-in-aspnet-core/" />
                        <MudListItem Text="@_localizer["How To Implement Blazor CRUD Using Entity Framework Core?"]" Href="https://genocs-blog.netlify.app/blog/blazor-crud-with-entity-framework-core/" />
                        <MudListItem Text="@_localizer["Custom Authentication In Blazor WebAssembly – Detailed"]" Href="https://genocs-blog.netlify.app/blog/authentication-in-blazor-webassembly/" />
                        <MudListItem Text="@_localizer["Implementing Blazor CRUD Using Mudblazor Component Library In .NET 5"]" Href="https://genocs-blog.netlify.app/blog/blazor-crud-using-mudblazor/" />
                        <MudListItem Text="@_localizer["Building A Chat Application With Blazor, Identity, And SignalR"]" Href="https://genocs-blog.netlify.app/blog/realtime-chat-application-with-blazor/" />
                    </MudList>
                </MudExpansionPanel>
            </MudExpansionPanels>
        </MudItem>
        <div style="margin:50px"></div>
    </MudGrid>
</MudContainer>