@inherits LayoutComponentBase
@inject Microsoft.Extensions.Localization.IStringLocalizer<NotFoundLayout> _localizer

<MudThemeProvider Theme="GenocsPortalTheme.DefaultTheme" />
<MudSnackbarProvider />
<MudContainer MaxWidth="MaxWidth.Small">
    <div class="d-flex flex-column">
        <MudText Typo="Typo.h5" Class="mt-6" Align="Align.Center">@_localizer["Message"]</MudText>
        <MudItem xs="12" sm="12" md="12">
            <div class="pa-4 justify-center my-4 mud-text-align-center">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Link="/">@_localizer["GoHome"]</MudButton>
            </div>
        </MudItem>
    </div>
</MudContainer>